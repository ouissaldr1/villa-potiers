{# {% extends 'base.html.twig' %} #}
{% extends 'admin/adminDashboard.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h2>User index</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                {% if "ROLE_ADMIN" in user.roles %}
                
                <td style="color:#F65F5F;font-weight:600">Admin</td>

                
                <td>User</td>

                {% endif %}
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                <td>
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_crud_new') }}">Create new</a>
{% endblock %}
